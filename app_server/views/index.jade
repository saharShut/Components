extends layout

block content
  each container in containers
    .container-fluid.pt-4.px-4
      .bg-light.text-center.rounded.p-4
        .d-flex.align-items-center.justify-content-between.mb-4
          .table-title.justify-content-between
            h6.mb-0= container.container_name 
            small.mb-0 #{container.container_descriptor}
          a.btn.btn-sm.btn-primary(href="/containers/#{container.container_id}/elements") Add element 
        .table-responsive  
          table.table.text-start.align-middle.table-bordered.table-hover.mb-0
            thead
              tr.text-dark
                th(scope="col")
                  input.form-check-input(type="checkbox")
                th(scope="col") Name
                th(scope="col") Amount
                th(scope="col") Discription
                th(scope="col") Action
            tbody
              each element in container.el_elements
                tr
                  td
                    input.form-check-input(type="checkbox")
                  td #{element.element_name}
                  td #{element.element_amount}
                  td #{element.element_description}
                  td 
                    a.btn.btn-sm.btn-primary(href="/containers/#{container.container_id}/elements/#{element.element_id}") Detail
  .container-fluid.pt-4.px-4
    .bg-light.text-center.rounded.p-4.d-flex.flex-row-reverse
      a.btn.btn-sm.btn-primary(href='/containers') Add Container